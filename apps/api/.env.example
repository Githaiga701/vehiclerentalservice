# Database
DATABASE_URL="postgresql://username:password@localhost:5432/vehiclerent"

# Redis (Optional - for OTP storage in production)
# Leave commented out for local development (will use database)
# REDIS_URL="redis://localhost:6379"
# For production with Upstash Redis (recommended for Vercel):
# REDIS_URL="rediss://default:your-password@your-redis-url.upstash.io:6379"

# JWT Secrets (REQUIRED - Generate strong secrets for production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Twilio WhatsApp (Optional - for WhatsApp OTP)
# Get credentials from: https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886  # Sandbox number for testing
# For production, apply for WhatsApp Business API and use your approved number
