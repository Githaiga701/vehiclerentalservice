# Database - PostgreSQL for production compatibility
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vehiclerent_dev"

# JWT Secrets - CHANGE THESE IN PRODUCTION
JWT_SECRET="dev-secret-key-change-in-production-use-openssl-rand-base64-32"
JWT_REFRESH_SECRET="dev-refresh-secret-change-in-production-use-openssl-rand-base64-32"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:3002"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6
